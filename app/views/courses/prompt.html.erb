<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <h3 class="panel-title">选课提示</h3>
            </div>
            <div class="col-xs-6 text-right">
              <%= link_to "返回", list_courses_path, class: 'btn-sm btn-info' %>
            </div>
          </div>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <tr>
              <th>类别</th>
              <th>总学分</th>
              <th>公共课程</th>
              <th>专业课程</th>
            </tr>
            <tr>
              <th>学分要求</th>
              <td>30.0学分</td>
              <td>2.0学分</td>
              <td>12.0学分</td>
            </tr>
            <tr>
              <th>已选学分</th>
              <td><%= @total_credit %>学分</td>
              <td><%= @public_credit %>学分</td>
              <td><%= @major_credit %>学分</td>
            </tr>
            <tr>
              <th>选课情况</th>
              <td></td>
              <% if @public_course.empty?%>
                <td>无</td>
              <% else %>
                <td rawspan= "<%= @public_course.count %>">
                  <% @public_course.each do |course| %>
                    <%= course.name %><br>
                  <% end %>
                </td>
              <% end %>
              <% if @major_course.empty?%>
                <td>无</td>
              <% else %>
                <td rawspan= "<%= @major_course.count %>">
                  <% @major_course.each do |course| %>
                    <%= course.name %><br>
                  <% end %>
                </td>
              <% end %>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
