<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <h3 class="panel-title">课表</h3>
            </div>
            <div class="col-xs-6 text-right">
              <%= link_to "返回", courses_path, class: 'btn-sm btn-info' %>
            </div>
          </div>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover" style="border-collapse: collapse;">
            <tr>
              <th style="border: 1px solid black;">节次\星期</th>
              <% @days.each do |day| %>
                <th style="border: 1px solid black;"><%= day %></th>
              <% end %>
            </tr>
            <% @times.each do |time| %>
              <tr>
                <th style="border: 1px solid black;"><%= time %></th>
                <% @days.each do |day| %>
                  <% if @course_table[day].nil? or @course_table[day][time].nil? %>
                    <td></td>
                  <% else %>
                    <td style="border: 1px solid black;"><% @course_table[day][time].each do |course| %>
                        <%= course %><br>
                      <% end %>
                    </td>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
